    <!-- #2 form validation -->
    <h2>GET요청</h2>
    <form action="/getForm" method="get" name="login1">
      <input type="text" name="id" placeholder="id는 최소 3글자" minlength="3" required />
      <input
        type="password"
        name="pw"
        placeholder="pw는 최소 4글자,최대 8글자"
        minlength="4"
        maxlength="8"
        required
      />
      <input type="email" name="email" placeholder="EMAIL" required />
      <input type="number" name="grade" placeholder="GRADE" required />
      <button type="submit">제출</button>
    </form>

    <h2>POST요청</h2>
    <form action="/postForm" method="post" name="login2">
      <!-- id: 대소문자,한글,숫자 / 4글자 이상 -->
      <!-- pw: 소문자,숫자 / 8글자 이상 12글자 이하-->
      <input
        type="text"
        name="id2"
        placeholder="id"
        pattern="([a-zA-Z가-힣0-9]){4,}"
        title="대소문자,한글,숫자를 포함하여 4글자 이상 작성해주세요"
      />
      <input
        type="password"
        name="pw2"
        placeholder="pw"
        pattern="([a-z0-9]){8,12}"
        title="소문자,숫자로 8글자 이상 12글자 이하로 작성해주세요"
      />
      <button type="submit">제출</button>
    </form>

